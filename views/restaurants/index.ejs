<% layout("layouts/boilerplate") %>

<div id="cluster-map"></div>

<h1>All restaurants!</h1>
<div>
    <a href="/restaurants/new">Add Restaurant</a>
</div>
<% for(let restaurant of restaurants){ %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if(restaurant.images.length){ %>
            <img crossorigin="anonymous" src="<%= restaurant.images[0].url %>" alt="" class="img-fluid">
            <% } else{ %>
            <img crossorigin="anonymous" src="https://res.cloudinary.com/dyzokyko2/image/upload/v1684677715/Tomato/t9io4rojflvj1ovhpy4a.jpg"
                alt="">
            <% } %>
        </div>
        <div class="col-md-8">
            <h5 class="card-title"><%= restaurant.title %></h5>
            <p class="card-text"><%= restaurant.description %></p>
            <p class="card-text">
                <small class="text-muted"><%= restaurant.location %></small>
            </p>
            <a class="btn btn-primary" href="/restaurants/<%= restaurant._id %>">View <%= restaurant.title %></a>
        </div>
    </div>
</div>
<% } %>

<script>
    const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
    const restaurants = { features: <%- JSON.stringify(restaurants) %>};
</script>

<script src="/scripts/clusterMap.js"></script>